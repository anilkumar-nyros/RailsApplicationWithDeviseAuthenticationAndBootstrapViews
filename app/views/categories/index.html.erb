

<h1>Listing Categories</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category ,class: "btn btn-success"%></td>
       
         <td><%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'), edit_category_path(category),:class => 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center><%= link_to 'Create New Category', new_category_path,class: "btn btn-link" %>
