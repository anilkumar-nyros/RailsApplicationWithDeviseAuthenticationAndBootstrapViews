

<h1>Listing Areas</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @areas.each do |area| %>
      <tr>
        <% a = area.name %>
        
        <td><%= link_to a, area %></td>
        <td><%= area.state %></td>
        
       
        <td><%= link_to raw('<i class="glyphicon glyphicon-edit"></i>'), edit_area_path(area),:class => 'btn btn-info' %></td>
       
         <td><%= link_to raw('<i class="glyphicon glyphicon-trash"></i>'), area, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<center><%= link_to 'Create New Area', new_area_path,class: "btn btn-link" %></center>
